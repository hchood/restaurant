<h1><%= @menu_item.name %></h1>

<p>
  <strong>Name:</strong>
  <%= @menu_item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @menu_item.description %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @menu_item.price_in_dollars %>
</p>

<p>
  <strong>Price:</strong>
  <%= @menu_item.category %>
</p>

<div>
  <strong>Comments:</strong>
  <% @menu_item.comments.each do |comment| %>
    <p><%= comment.body %></p>
  <% end %>
</div>

<%= form_for [@menu_item, @comment] do |f| %>
  <p>
    <%= f.label :body, "Comment" %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

